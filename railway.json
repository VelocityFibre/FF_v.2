{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install && cd apps/web && npm ci --cache /tmp/.npm && npm run build",
    "watchPatterns": [
      "apps/web/**",
      "packages/**",
      "package.json",
      "railway.json"
    ]
  },
  "deploy": {
    "startCommand": "cd apps/web && npm start",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}